/* pages/index/index.wxss */
/* 轮播图 */
.indexContainer{
  height: 100%;
}
.indexContainer .banner .bannerItem .bannerImg{
  width: 100%;
  height: 300rpx;
}

/* nav导航 */
.indexContainer .navList{
  display: flex;
  justify-content: space-around;
  /* 剩余空间平均分配 */
}

.indexContainer .navList .navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.indexContainer .navList .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 50rpx;
  margin: 20rpx 0;
}

.indexContainer .navList .navItem .navText{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.indexContainer .recommend{
  padding: 20rpx;
}


.indexContainer .recommend .recommendScroll{
  height: 300rpx;
  display: flex;
}

.indexContainer .recommend .recommendScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.indexContainer .recommend .recommendScroll .scrollItem .itemImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.indexContainer .recommend .recommendScroll .scrollItem .itemText{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;   /** 多行文本溢出...*/
  overflow: hidden;
  font-size: 28rpx; 
}

/* 排行榜 */
.indexContainer .rank{
  padding: 20rpx;
}

/* 这两个高度要设置，main当中高度不能撑开外部 */
.indexContainer .rank .rankSwiper{
  height: 400rpx;
}
.indexContainer .rank .rankSwiper .swiperItem{
  height: 400rpx;
}

.indexContainer .rank .main{
  height: 400rpx;
  background-color: #aaa;
  width: 90%;
  padding: 20rpx;
}

.indexContainer .rank .main .mainTitle{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.indexContainer .rank  .main .mainItem{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.indexContainer .rank .main .mainItem .songImg{
  width: 100rpx;
  height: 100rpx;
}

.indexContainer .rank .main .mainItem .count{
  margin: 0 50rpx;
}










